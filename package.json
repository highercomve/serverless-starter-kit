{
  "name": "api-services",
  "version": "0.0.1",
  "description": "This are the serverless starter kit for api services",
  "main": "handler.js",
  "repository": "https://github.com/highercomve/serverless-starter-kit",
  "author": "Sergio Marin",
  "license": "MIT",
  "scripts": {
    "console": "node private/console.js",
    "test": "nyc ava -v",
    "build": "babel src/ -d dist/src/",
    "start": "serverless offline start --host 0.0.0.0",
    "debug": "SLS_DEBUG=* node-debug serverless offline start --host 0.0.0.0",
    "flow": "flow",
    "setup": "sh private/start_project.sh",
    "sls": "serverless",
    "deploy": "sh private/deploy.sh"
  },
  "ava": {
    "require": [
      "./test/helpers/setup.js",
      "babel-register"
    ],
    "files": [
			"test/**/*.spec.js"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "env",
      "flow"
    ]
  },
  "standard": {
    "globals": [
      "expect",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  },
  "dependencies": {
    "mongoose": "^4.11.5"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "ava-spec": "^1.1.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.52.0",
    "node-inspector": "^1.1.1",
    "nyc": "^11.2.1",
    "repl.history": "^0.1.4",
    "serverless": "^1.19.0",
    "serverless-offline": "^3.15.3"
  }
}
